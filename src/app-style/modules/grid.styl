.column__right{
  lost-align: right;
}
.flex-row{
  lost-utility: clearfix;
  lost-flex-container: row;
  &.reverse{
    flex-direction: row-reverse;
  }
  &.flex-row_column{
    lost-flex-container: column;
    &.reverse{
      flex-direction: column-reverse;
    }
  }
  .column, .column-1-3{
    lost-column: 1/3 flex;
  }
  .column-2-3{
    lost-column: 2/3 flex;
  }
  .column-3-3{
    lost-column: 3/3 flex;
  }
  .column-1-4{
    lost-column: 1/4 flex;
  }
  .column-2-4{
    lost-column: 2/4 flex;
  }
}
.clear-row{
  lost-utility: clearfix;
  clearfix();
}
.centered-columns{
  lost-align: center;
}
//General utilities for grid
.show-mobile{
  display: none;
}

+below(768px){

}
+below(480px){
  .show-mobile{
    display: block;
  }
}
.spaced-row{
  clear:both;
  width: 100%;
  padding-top: $padding-default;
  padding-bottom: $padding-default;
}
//generate all of the row possibilities in a 12 column grid form
for x in (1..12)
  .column-{x}
    lost-column x/12
    &.column-small-full
      width: 100%;
    &.column-small-half
      lost-column: 1/2;
    &.column-small-quarter
      lost-column: 1/4;
    &.column-small-third
      lost-column: 1/3;
    &.column-small-two-third
      lost-column: 2/3;


clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both